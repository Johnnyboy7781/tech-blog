<form class="edit-post-form">
    <h2>Edit Post</h2>
    <div class="input-container"> 
        <div>
            <label for="edit-post-title">Title:</label>
            <input type="text" id="edit-post-title" value="{{post.title}}"/>
        </div>
        <div>
            <label for="edit-post-conent">Content:</label>
            <textarea type="text" id="edit-post-conent">{{post.content}}</textarea>
        </div>
        <div>
            <button type="submit">Submit</button>
            <button class="delete-post">Delete post</button>
        </div>
    </div>
</form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>